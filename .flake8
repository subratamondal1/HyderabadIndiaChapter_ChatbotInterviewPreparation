[flake8]
exclude =
    .venv,
    .git,
    .tox,
    dist,
    doc,
    *openstack/common/*,
    *lib/python*,
    *egg,
    build,
    tools/xenserver*,
    releasenotes
ignore = 
    E203,
    E266,
    E501,
    W503,
    F403,
    F401
max-line-length = 120
max-doc-length = 120
max-complexity = 18
select = B,C,E,F,W,T4,B9